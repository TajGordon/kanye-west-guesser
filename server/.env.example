# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration
# For production, set this to your frontend domain(s)
# Multiple origins: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:5173

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Game Configuration
MAX_LOBBIES=100
LOBBY_DESTROY_GRACE_MS=60000
LOBBY_CLEANUP_INTERVAL_MS=30000

# Question Data
QUESTIONS_DATA_PATH=./data/questions

# Session Configuration (if needed later)
SESSION_SECRET=change-this-in-production-to-a-random-string

# Logging
LOG_LEVEL=info
